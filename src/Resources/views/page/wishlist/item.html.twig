{% extends '@WorkshopWishlist/page/wishlist/_page.html.twig' %}

{% block base_breadcrumb %}
    {% set breadcrumbList = [
        {
            "name": 'Wishlist',
            "link": path('frontend.wishlist.index')
        },
        {
            "name": wishlist.name|e,
            "link": path('frontend.wishlist.item', { id: wishlist.id })
        }
    ] %}

    {{ parent() }}
{% endblock %}

{% block base_content %}
    <h1>{{ wishlist.name|e }}</h1>

    <p>You are{% if not customerIsOwner %}n't{% endif %} the owner of this wishlist</p>
    <p>The Wishlist visibility is {% if not wishlist.public %} not{% endif %} public</p>

    <div class="row">
        <div class="col-lg-12">
            {% for product in products %}
                <li>{{ product.name|e }}</li>
            {% endfor %}
        </div>
    </div>
{% endblock %}
